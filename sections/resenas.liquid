     "label":"Ingresa la rese単a 2"
   },
   {
      
     "type":"image_picker",
     "id":"resena_3", 
     "label":"Ingresa la rese単a 3"
   },
   {
     "type":"image_picker",
     "id":"resena_4", 
     "label":"Ingresa la rese単a 4"
   }
   
],
"presets":[
   {
     "name":"resenas"
   } 
]
 }


