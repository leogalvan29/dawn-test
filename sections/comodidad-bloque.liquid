<div class="contenedor-movil-comodidad">
    <div class="txt-movil-contenedor">
          <h2> {{ section.settings.titulo_comodidad }} </h2>
          <p> {{ section.settings.texto_comodidad}} </p>
    </div>
    <div class="cta-comodidad-movil">
        <a href=" {{ section.settings.link_boton }} "> {{ section.settings.button_comodidad }} </a>
    </div>
</div>

<style>

    .contenedor-movil-comodidad{
        background-image: url('https://cdn.shopify.com/s/files/1/0766/8829/4173/files/Beneficio_Movil-C.png?v=1686980567') ;
        background-size: 445px 400px;
        width: 100%;
        height: 400px;
        background-repeat: no-repeat;
        position: relative;
    }

    @media(min-width:445px){
        .contenedor-movil-comodidad {
         background-size: cover;
         height: 550px;
}

    }

    @media(min-width:768px){
        .contenedor-movil-comodidad {
            height:650px;
        }
    }
    @media(min-width:991px){
        .contenedor-movil-comodidad{
            display: none;
        }
    }

    .txt-movil-contenedor {
        width: 90%;
        margin: 0px auto;
        height: 150px;
        
        position: absolute;
        left: 3%;
        bottom: 70px;

    }

    @media(min-width:576px){

        .txt-movil-contenedor {
            left: 5%;

}

    }

  

    .txt-movil-contenedor h2 {
        color: #0072C5;
        font-weight: 600;
        font-size: 26px;
        position: relative;
        top: 15px;
        
    }

    .txt-movil-contenedor p {
        font-size: 18px;
        font-weight: 600;
    }

    .cta-comodidad-movil{
        position: absolute;
        bottom: 20px;
        right: 3%;
    }

    @media(min-width:576px){
    .cta-comodidad-movil{
        left: 5%;
    }
   }

    .cta-comodidad-movil a {
        background-color: #0072C5;
        padding: 5px 15px;
        border-radius: 25px;
        text-decoration: none;
        color: #fff;
        font-weight: 600;
        font-size: 12px;
    }

 

  
</style>

<div class="contenedor-desktop-comodidad">
   <div class="txt-comodidad-desktop">
         <h2>{{ texto_desktop_comodidad }}</h2>
          <p> {{ texto_desc_com }} </p>
   </div>
</div>


<style>
    .contenedor-desktop-comodidad{
        display: none;
    }

    @media(min-width:991px){
        .contenedor-desktop-comodidad{
            display: block;
            background-image: url('https://cdn.shopify.com/s/files/1/0766/8829/4173/files/Beneficios_Compu_S_T-Comp.png?v=1686980625');
            width: 100%;
            height: 700px;
            background-size: contain;
            background-repeat: no-repeat;
        }
    }


</style>




{%  schema %} 

 {
    "name":"Bloque_comodidad",
     "settings": [
        {
            "type":"text",
            "id":"titulo_comodidad",
            "label":"Ingresa el titulo comodidad"
        },
        {
            "type":"text",
            "id":"texto_comodidad",
            "label":"Ingresa el texto de la description"
        },
        {
            "type":"text",
            "id":"button_comodidad", 
            "label":"Ingresa el texto del boton"
        },
        {
            "type":"url",
            "id":"link_boton",
            "label":"Ingresa el link del boton cta"
        },
        {
            "type":"text",
            "id":"texto_desktop_comodidad",
            "label":"Ingresa el texto comodidad desktop" 
        },
        {
            "type":"text",
            "id":"texto_desc_com",
            "label":"Ingresa el texto de la description para escritorio"

        }
     ],
     "presets":[ 
        {
            "name":"Bloque Comodidad"
        }
     ] 
 }


{%  endschema %}