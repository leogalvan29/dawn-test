 {
    "name":"Bloque_comodidad",
     "settings": [
        {
            "type":"text",
            "id":"titulo_comodidad",
            "label":"Ingresa el titulo comodidad"
        },
        {
            "type":"text",
            "id":"texto_comodidad",
            "label":"Ingresa el texto de la description"
        },
        {
            "type":"text",
            "id":"button_comodidad",
            "label":"Ingresa el texto del boton"
        },
        {
            "type":"url",
            "id":"link_boton",
            "label":"Ingresa el link del boton cta"
        }
     ],
     "presets":[ 
        {
            "name":"Bloque Comodidad"
        }
     ] 
 }


