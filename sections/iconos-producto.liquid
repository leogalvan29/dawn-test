
<div class="contenedor-acordeon">
  <div id="accordion" class="accordion">
    
    <h3>Descripción</h3>
    <div>
      
        <p>{{ product.metafields.custom.descripcion | metafield_tag }}  </p>
        <img src="{{ product.metafields.custom }}" alt="">
      
      
    </div> 
    <h3>Aplicación</h3>
    <div>
      <p>
      {{ product.metafields.custom.aplicacion | metafield_tag }}
      </p>
    </div>
 
  </div>
  <a href="{{ product.metafields.custom.ficha_tecnica.value.url }}" target="new" class="ficha-tecnica">Descargar Ficha</a>
</div>
 
 



  <style>

.contenedor-acordeon{  
      width: 70%;
      margin: 0px auto;
      height: auto;
    }

   .ui-accordion-header{
      background-color:  #ebebeb;
      color: #333; 
   }

   .ui-accordion-content{
    background-color: #f5f5f5;
   }
   
    @media(min-width:768px){
      .contenedor-acordeon{
      width: 60%;
      margin: 0px auto;
      height: auto;
    }
    }

    .ficha-tecnica{
      width: 250px;
      height: 45px;
      background-color: #0072C5;
      color: #fff;
      padding: 10px 30px;
      position: relative;
      top: 20px;
      text-decoration: none;
    }
    

  </style>

  <script>
   $(document).ready(function($){
    $( "#accordion" ).accordion({
  collapsible: true
});
   })

  </script>


